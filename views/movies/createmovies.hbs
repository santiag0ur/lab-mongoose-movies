<h2>Create Movie</h2>

<form method='POST'>
  <label for='title'>Title</label>
  <input
    id='title'
    type='text'
    name='title'
    placeholder='Movie title'
    value='{{movie.title}}'
  />
  <label for='genre'>Genre</label>
  <input
    id='genre'
    type='text'
    name='genre'
    placeholder='Movie genre'
    value='{{movie.genre}}'
  />
  <label for='plot'>Plot</label>
  <input
    id='plot'
    type='text'
    name='plot'
    placeholder='Movie plot'
    value='{{movie.plot}}'
  />
  <button type='submit'>Create Movie</button>
</form>
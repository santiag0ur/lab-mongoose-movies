<h2>Edit Celebrity</h2>
<form method='POST' action='/celebrities/{{data._id}}'>
  <label for='name-input'>Name</label>
  <input id='name-input' type='text' name='name' value='{{data.name}}' />
  <label for='occupation-input'>Occupation</label>
  <input
    id='occupation-input'
    type='text'
    name='occupation'
    value='{{data.occupation}}'
  />
  <label for='catchPhrase'>Catch Phrase</label>
  <input
    id='catchPhrase-input'
    type='text'
    name='catchPhrase'
    value='{{data.catchPhrase}}'
  />
  <button type='submit'>Edit Celebrity</button>
</form>